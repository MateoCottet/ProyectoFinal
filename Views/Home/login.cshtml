@{
    ViewData["Title"] = "Login";
}

<body class="bodyLogin"> 
    <header class="headerLogin">
        <a href='@Url.Action("Index", "Home")'>
            <img src="https://raw.githubusercontent.com/GuidoCofa/UnityCares/main/img/LogoUnityCares.png" alt="UnityCares Logo" class="logo">
        </a>
    </header>

    <main class="containerA">
        <h2>Iniciar Sesión</h2>
        <form action='@Url.Action("Login","Home")' method="post" id="login-form">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu email" required  value="cottetmateo2017@gmail.com" >
            </div>
            <div class="form-group"> 
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required value="Hola123">
            </div>
            <div class="form-group">
                <button type="submit">Iniciar Sesión</button>
            </div>
        </form>
        <div class="register">
            <p>¿No tienes una cuenta? <a href="#">Registrarse</a></p>
        </div>
    </main>

    <footer class="footerLogueado">
        <p>&copy; 2024 UnityCares. Todos los derechos reservados.</p>
    </footer>
</body>
